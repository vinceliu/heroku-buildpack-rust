#!/bin/bash

set -euo pipefail

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

echo "-----> BUILD_DIR $BUILD_DIR CACHE_DIR $CACHE_DIR"

export CARGO_HOME="$CACHE_DIR/cargo"
export CARGO_TARGET_DIR="$CACHE_DIR/target"
export PATH="$CARGO_HOME/bin:$PATH"

cd "$CACHE_DIR"
if [[ -d "$CARGO_HOME" ]]; then
  echo "-----> Checking Rust Updates"
  rustup self update
  rustup update stable
  rustup default stable
else
  echo "-----> Installing rustup"
  mkdir -pv "$CARGO_HOME" && cd "$CARGO_HOME"
  curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs > rustup.sh &&
    chmod 755 rustup.sh &&
    ./rustup.sh -y --default-toolchain stable &&
    rm rustup.sh
fi

echo "-----> Building Rust Application"
cd "$BUILD_DIR" &&
  cargo build --release &&
  find "$CARGO_TARGET_DIR/release" -maxdepth 1 -type f -executable -exec cp {} "$BUILD_DIR" \; &&
